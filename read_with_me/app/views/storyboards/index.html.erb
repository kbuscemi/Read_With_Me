<h1>My Storyboards</h1>

<h5>Create New Storyboard</h5>
<%= form_for @storyboard do |f| %>
    <div> 
        <%= f.label :name %>
    </div>
    <div> 
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.submit 'Create' %>
    </div>
<% end %> 

<ul>
    <% @storyboards.each do |storyboard| %>
        <li><%= link_to "#{storyboard.name} - details", storyboard_path(storyboard) %>
        &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;
        <%# <%= link_to 'Remove', storyboard, method: :delete%> 
        </li>
    <% end %>
</ul>