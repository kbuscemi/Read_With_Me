<!DOCTYPE html>
<html>
  <head>
    <title>ReadWithMe</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Heebo" rel="stylesheet">
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://code.jquery.com/jquery-3.2.1.slim.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <p>
      <% if current_user %>
       <div class="nav2">
          Welcome <%= current_user.name.capitalize%>
          &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'Book Library', books_path %>
          &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'My Storyboards', storyboards_path%>
          &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'Log Out', session_path('dummy'), method: :delete %>
       </div>
      <% else %>
       <div class ="nav2">
        <%= link_to 'Log In', login_path %>
        &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;
        <%= link_to 'Sign Up', new_user_path %>
      </div>
      <% end %>
    </p>
  <%= yield %>
  </body>
  </div>
</html>
