<img class="logo2" src="https://i.imgur.com/1LY2500.png">

<h2 class="info">Log In</h2>
<p id="alert"><%= alert %></p>
<%= form_tag sessions_path do %>
  <div class="border2">
    <div class="field2">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], class: "secure" %>
    </div>
    <div class="field2">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "secure" %>
    </div>
    <div class="actions"><%= submit_tag "Log In", :class => "button" %></div>
  </div>
<% end %>    