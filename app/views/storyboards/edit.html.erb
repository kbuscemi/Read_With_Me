<body class="backgroundColor">
    <div class="editBox">
        <h5 class="editName">Storyboard Name:</h5>
                <%= form_for @storyboard do |f| %>
                    <div class="create"> 
                        <%= f.text_field :name %>
                    </div>
                    <div class="submitButton">
                        <%= f.submit 'Edit Name', id:'add' %>
                    </div>
                    <%= link_to "Back", storyboards_path, class: 'back' %>
                <% end %>
    </div> 
</body>

